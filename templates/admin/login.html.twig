{% extends 'admin/base.html.twig' %}

{% block title %} | Login{% endblock %}

{% block body %}

    <img class="login-logo" src="{{ asset('images/fima-logo-dark.svg') }}" alt="Logo">
    <form method="post" class="gg-login-box gg-form">
        <h1>Login</h1>

        <label for="inputEmail">Email</label>
        <input type="email" placeholder="Email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
        <br><br>
        <label for="inputPassword">Password</label>
        <input type="password" placeholder="Password" name="password" id="inputPassword" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="gg-btn hoverizzato" type="submit">Login</button>

        {% if error %}
            <div class="center-text">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </form>

{% endblock %}
